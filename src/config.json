{
  "name": "Drag To Go +",
  "icons": {
    "48": "drag-to-go-plus-48.png",
    "96": "drag-to-go-plus-96.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "option.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "permissions": [
    "<all_urls>",
    "clipboardWrite",
    "downloads",
    "tabs",
    "search",
    "storage"
  ],
  "csp": [
    "script-src 'self' 'unsafe-eval'",
    "object-src 'self'",
    "img-src 'self' data:"
  ]
}